<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".businessView.businessActivity.PatientVerifyOTPActivity">

    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/pic_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo_child" />

        <ImageView
            android:id="@+id/pic_cover"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/pic_logo"
            android:layout_marginTop="10dp"
            android:src="@drawable/cover_verify_otp" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pic_cover"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/mitr_regular"
            android:gravity="center"
            android:text="Xác minh OTP"
            android:textColor="@color/P_Blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_NOTE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_title"
            android:fontFamily="@font/mitr_light"
            android:gravity="center"
            android:text="Hãy nhập OTP được gửi đến số điện thoại"
            android:textColor="@color/Black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_mobilePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_NOTE"
            android:fontFamily="@font/mitr_light"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_mobilePhone"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_edit_text"
                android:clipToOutline="true"
                android:padding="5dp">

                <EditText
                    android:id="@+id/input_otpCode1"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:fontFamily="@font/mitr_light"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/Black"
                    android:textSize="32sp"
                    app:cursorColor="@color/P_Blue" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_edit_text"
                android:clipToOutline="true"
                android:padding="5dp">

                <EditText
                    android:id="@+id/input_otpCode2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:fontFamily="@font/mitr_light"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/Black"
                    android:textSize="32sp"
                    app:cursorColor="@color/P_Blue" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_edit_text"
                android:clipToOutline="true"
                android:padding="5dp">

                <EditText
                    android:id="@+id/input_otpCode3"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:fontFamily="@font/mitr_light"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/Black"
                    android:textSize="32sp"
                    app:cursorColor="@color/P_Blue" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_edit_text"
                android:clipToOutline="true"
                android:padding="5dp">

                <EditText
                    android:id="@+id/input_otpCode4"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:fontFamily="@font/mitr_light"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/Black"
                    android:textSize="32sp"
                    app:cursorColor="@color/P_Blue" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_edit_text"
                android:clipToOutline="true"
                android:padding="5dp">

                <EditText
                    android:id="@+id/input_otpCode5"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:fontFamily="@font/mitr_light"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/Black"
                    android:textSize="32sp"
                    app:cursorColor="@color/P_Blue" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_edit_text"
                android:clipToOutline="true"
                android:padding="5dp">

                <EditText
                    android:id="@+id/input_otpCode6"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:fontFamily="@font/mitr_light"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/Black"
                    android:textSize="32sp"
                    app:cursorColor="@color/P_Blue" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="parent">

        <TextView
            android:id="@+id/textView_Question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mitr_light"
            android:gravity="center"
            android:text="Không nhận được OTP?"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_reSendOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_Question"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/White"
            android:fontFamily="@font/mitr_regular"
            android:text="Gửi lại"
            android:textColor="@color/Red"
            android:textSize="12sp" />


        <Button
            android:id="@+id/button_Verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_reSendOTP"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/P_Blue"
            android:fontFamily="@font/mitr_medium"
            android:text="Xác minh"
            android:textColor="@color/White"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/progressBarVerify"
            style="@style/SpinKitView.Large.ThreeBounce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            app:SpinKit_Color="@color/BlueHover"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>