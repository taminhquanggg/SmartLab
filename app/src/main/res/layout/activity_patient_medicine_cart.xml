<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".businessView.businessActivity.PatientMedicineCartActivity">
    <TextView
        android:id="@+id/textView_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_family_mitr_medium"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="Giỏ hàng của tôi"
        android:textColor="@color/BlueHover"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/textView_header"
        tools:listitem="@layout/item_medicine_cart"
        android:id="@+id/recyclerView_cart"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerView_cart"
        android:id="@+id/relative_chitiet">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chi tiết thanh toán"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textView_chitiet"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng "
        android:layout_below="@+id/textView_chitiet"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        android:id="@+id/textView_tong"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 000 VND"
        android:layout_below="@+id/textView_chitiet"
        android:layout_toRightOf="@+id/textView_tong"
        android:layout_marginStart="250dp"
        android:textSize="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thuế "
        android:layout_below="@+id/textView_tong"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        android:id="@+id/textView_thue"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 000 VND"
        android:layout_below="@+id/textView_tong"
        android:layout_toRightOf="@+id/textView_thue"
        android:layout_marginStart="250dp"
        android:textSize="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng cộng "
        android:layout_below="@+id/textView_thue"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        android:id="@+id/textView_tongcong"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35 000 VND"
        android:layout_below="@+id/textView_thue"
        android:layout_toRightOf="@+id/textView_tongcong"
        android:layout_marginStart="200dp"
        android:textSize="15dp"
        android:textStyle="bold"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_chitiet"
        android:layout_marginTop="270dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng"
            android:id="@+id/textView_tonghoadon"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35 000 VND"
            android:layout_below="@+id/textView_tonghoadon"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginStart="150dp"
            android:text="Thanh Toán "
            />
    </RelativeLayout>



</RelativeLayout>