<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_Doctor"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:elevation="0dp"
        app:cardBackgroundColor="@color/BlueLight10"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_avatarDoctor"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/avatar_style"
                app:srcCompat="@drawable/avatar"
                app:strokeColor="@color/P_Blue"
                app:strokeWidth="5dp" />


            <TextView
                android:id="@+id/txt_DoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_family_mitr_regular"
                android:gravity="center"
                android:text="Hoàng Đức Thắng"
                android:textColor="@color/Black"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_avatarDoctor" />

            <TextView
                android:id="@+id/txt_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/font_family_mitr_light"
                android:gravity="center"
                android:text="Phòng khám đa khoa La Mai"
                android:textColor="@color/BlueHover"
                android:textSize="8sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_DoctorName" />

            <TextView
                android:id="@+id/txt_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/font_family_mitr_light"
                android:gravity="center"
                android:text="Chuyên khoa: Răng Hàm Mặt"
                android:textColor="@color/BlueHover"
                android:textSize="8sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_hospital" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <View
        android:id="@id/view_doctorTrending"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView_Doctor"
        app:layout_constraintStart_toStartOf="@+id/cardView_Doctor"
        app:layout_constraintTop_toBottomOf="@+id/cardView_Doctor" />

    <Button
        android:id="@+id/button_orderDoctorTrending"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/White"
        android:fontFamily="@font/font_family_mitr_regular"
        android:text="Đặt hẹn ngay"
        android:textColor="#0B8AA0"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_doctorTrending"
        app:layout_constraintEnd_toEndOf="@+id/view_doctorTrending"
        app:layout_constraintStart_toStartOf="@+id/view_doctorTrending"
        app:layout_constraintTop_toTopOf="@+id/view_doctorTrending"
        app:strokeColor="@color/BlueHover"
        app:strokeWidth="0.5dp" />


</androidx.constraintlayout.widget.ConstraintLayout>