<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".businessView.businessActivity.PatientBookDoctorActivity">
    <RelativeLayout
        android:id="@+id/relative_search_doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"

        app:layout_constraintTop_toTopOf="parent">

        <SearchView
            android:id="@+id/seachView_searchDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="9dp"
            android:background=""
            android:iconifiedByDefault="false"
            android:imeOptions="actionSearch"
            android:queryHint="Tìm kiếm bác sĩ"
            android:textColorHint="@color/Black"
            app:iconifiedByDefault="false"
            app:queryBackground="@null"
            app:submitBackground="@null"

            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/BlueHover"
            android:elevation="0dp"
            android:src="@drawable/ico_back"
            app:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@null" />
        <TextView
            android:id="@+id/text_doctor_profile"
            android:text="Bác sĩ chuyên khoa"
            android:layout_below="@+id/button_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:gravity="left"
            android:fontFamily="@font/mitr_medium"
            android:layout_marginTop="5dp"
            />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_doctor_profile"
        tools:listitem="@layout/item_doctor"
        />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>